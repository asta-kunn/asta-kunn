#Asdos  = NA
fhand = input("Masukkan nama file input: ")
file_baru = input("Masukkan nama file output: ")
jumlah_1 = 0
jumlah_2 = 0
jumlah_3 = 0
try:
    file_in = open(fhand, "r").read()
    file_out = open(file_baru, "w")
    '''
    TODO - Lab04
    >Mengganti kata @ dengan (M) sampai bertemu whitespace (1 kata)
    >Mengganti kata # dengan (H) sampai bertemu whitespace (1 kata)
    >Mengganti kata www. dengan (U) sampai bertemu whitespace (1 kata)
    >menghitung total mention dengan 5 space sebagai jarak
    >menghitung total hastag dengan 5 space sebagai jarak
    >menghitung total www. dengan 5 space sebagai jarak
    '''
    if len(file_in.split()) == 0:
        print("File input ada tapi kosong :(")
        exit()
    else:
        for line in file_in.split():
            if line.startswith("@"):
                file_in = file_in.replace(line, "(M)")
                jumlah_1 += 1
            elif line.startswith("#"):
                file_in = file_in.replace(line, "(H)")
                jumlah_2 += 1
            elif line.startswith("www."):
                file_in = file_in.replace(line, "(U)")
                jumlah_3 += 1
    file_out.write(file_in)
    print("\n"+"###############", file= file_out)
    print('Mention  :{:>5d}'.format(jumlah_1), file= file_out)
    print('Hashtag  :{:>5d}'.format(jumlah_2), file= file_out)
    print('Url      :{:>5d}'.format(jumlah_3), file= file_out)
except FileNotFoundError:
    print("File input tidak ditemukan :(")
else: #ketika program berjalan lancar dan tidak ada eror
    print(f"Output berhasil ditulis pada {str(file_baru)}")
finally:
    print("Program selesai. Tekan enter untuk keluar....")



